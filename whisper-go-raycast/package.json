{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "whisper-go",
  "title": "Whisper Go",
  "description": "Systemweite Spracheingabe mit Toggle-Recording",
  "icon": "icon.png",
  "author": "whisper-go",
  "license": "MIT",
  "commands": [
    {
      "name": "toggle-recording",
      "title": "Toggle Recording",
      "subtitle": "Whisper Go",
      "description": "Aufnahme starten/stoppen und Text einfügen",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "pythonPath",
      "title": "Python Pfad",
      "description": "Pfad zur Python-Installation (leer = Auto-Detect)",
      "type": "textfield",
      "required": false,
      "default": ""
    },
    {
      "name": "scriptPath",
      "title": "Script Pfad",
      "description": "Pfad zu transcribe.py (leer = Auto-Detect)",
      "type": "textfield",
      "required": false,
      "default": ""
    },
    {
      "name": "language",
      "title": "Sprache",
      "description": "Sprachcode für Transkription",
      "type": "dropdown",
      "required": false,
      "default": "de",
      "data": [
        {
          "title": "Deutsch",
          "value": "de"
        },
        {
          "title": "English",
          "value": "en"
        },
        {
          "title": "Auto-detect",
          "value": ""
        }
      ]
    },
    {
      "name": "openaiApiKey",
      "title": "OpenAI API Key",
      "description": "API-Key für Transkription (leer = aus .env laden)",
      "type": "password",
      "required": false,
      "default": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.81.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.14.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "postinstall": "ln -sf \"$(dirname \"$PWD\")/transcribe.py\" assets/transcribe.py 2>/dev/null || true",
    "build": "ray build --skip-types -e dist -o dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
